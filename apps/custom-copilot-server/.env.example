# Server
PORT=3001
NODE_ENV=development

# Auth
COPILOT_API_KEY=

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/custom_copilot
DIRECT_URL=postgresql://postgres:password@localhost:5432/custom_copilot

# Redis
REDIS_URL=redis://localhost:6379

# Encryption (for user API keys) - Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# AI Providers (default/fallback keys)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
OLLAMA_URL=http://localhost:11434

# Default Provider (anthropic|openai|ollama)
DEFAULT_PROVIDER=anthropic
DEFAULT_MODEL=claude-3-5-sonnet-20241022

# SIM App (for callbacks)
SIM_APP_URL=http://localhost:3000

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000
